{
  "private": true,
  "author": "raminjafary",
  "description": "small and fast ssr first framework",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "vida:start": "yarn workspace vida start",
    "vida:ssr": "yarn workspace vida ssr",
    "vida:build": "yarn workspace vida build",
    "vida:bundle": "yarn workspace vida bundle",
    "vida:denoify": "yarn workspace vida denoify",
    "vida:deno": "yarn workspace vida deno",
    "vida:deno:test": "yarn workspace vida deno:test",
    "vida:release": "yarn workspace vida release",
    "template:start": "yarn workspace template start",
    "template:build": "yarn workspace template build",
    "clean:test": "rimraf \"packages/vida/tests/**/*.js\"",
    "test": "yarn clean:test && tsc --project packages/vida/tests/tsconfig.json && jest \"tests/.+\\.test.js$\"  && yarn clean:test",
    "lint": "eslint --ext .js,.ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install",
    "format": "prettier --write --ignore-path .gitignore --ignore-unknown .",
    "format:check": "prettier --check --ignore-path .gitignore --ignore-unknown .",
    "add:githook:pre-commit": "husky add .husky/pre-commit 'yarn lint-staged'",
    "add:githook:commit-msg": "yarn husky add .husky/commit-msg 'yarn commitlint --edit $1'"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "compression-webpack-plugin": "^8.0.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jsdom": "^16.5.2",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.0",
    "ts-loader": "^9.1.2",
    "typescript": "^4.2.3",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2",
    "denoify": "^0.7.1"
  }
}
