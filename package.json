{
  "private": true,
  "author": "raminjafary",
  "description": "small and fast ssr first framework",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "vira:start": "yarn workspace vira start",
    "vira:ssr": "yarn workspace vira ssr",
    "vira:build": "yarn workspace vira build",
    "vira:bundle": "yarn workspace vira bundle",
    "vira:denoify": "yarn workspace vira denoify",
    "vira:deno": "yarn workspace vira deno",
    "vira:deno:test": "yarn workspace vira deno:test",
    "vira:release": "yarn workspace vira release",
    "template:start": "yarn workspace template start",
    "template:build": "yarn workspace template build",
    "clean:test": "rimraf \"packages/vira/tests/**/*.js\"",
    "test": "yarn clean:test && tsc --project packages/vira/tests/tsconfig.json && jest \"tests/.+\\.test.js$\"  && yarn clean:test",
    "lint": "eslint --ext .js,.ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install",
    "format": "prettier --write --ignore-path .gitignore --ignore-unknown .",
    "format:check": "prettier --check --ignore-path .gitignore --ignore-unknown .",
    "add:githook:pre-commit": "husky add .husky/pre-commit 'yarn lint-staged'",
    "add:githook:commit-msg": "yarn husky add .husky/commit-msg 'yarn commitlint --edit $1'"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^13.0.0",
    "@commitlint/config-conventional": "^13.0.0",
    "@types/jest": "^27.0.0",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^4.23.0",
    "compression-webpack-plugin": "^9.0.0",
    "denoify": "^0.10.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^7.0.0",
    "jest": "^27.0.0",
    "jsdom": "^18.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.0",
    "ts-loader": "^9.1.2",
    "typescript": "^4.2.3",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^4.0.0"
  }
}
