{
  "name": "framework",
  "version": "1.0.0",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "author": "raminjafary",
  "license": "MIT",
  "scripts": {
    "start": "yarn dev",
    "build": "tsc",
    "bundle": "webpack --config webpack.bundle.prod.js",
    "test": "jest",
    "dev": "yarn build && yarn bundle && yarn copy && npm-run-all --parallel dev:*",
    "dev:tsc": "tsc --watch",
    "dev:serve": "npx live-server --open=playground",
    "dev:webpack": "webpack --config webpack.dev.js --watch",
    "dev:bundle": "webpack --config webpack.bundle.dev.js --watch",
    "serve": "webpack serve --config webpack.dev.js --open",
    "copy": "mkdir -p playground && cp ./src/dev/index.html ./playground",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install",
    "format": "prettier --write --ignore-path .gitignore --ignore-unknown .",
    "format:check": "prettier --check --ignore-path .gitignore --ignore-unknown .",
    "add:githook:pre-commit": "husky add .husky/pre-commit 'yarn lint-staged'",
    "add:githook:commit-msg": "yarn husky add .husky/commit-msg 'yarn commitlint --edit $1'",
    "release": "standard-version $1 && git push origin main --follow-tags"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "compression-webpack-plugin": "^7.1.2",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jsdom": "^16.5.2",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "standard-version": "^9.2.0",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.3",
    "webpack": "^5.31.2",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  }
}
