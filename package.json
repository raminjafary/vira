{
  "name": "framework",
  "version": "1.0.0",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "author": "raminjafary",
  "license": "MIT",
  "scripts": {
    "dev": "tsc src/index.ts",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install",
    "add:githook:pre-commit": "husky add .husky/pre-commit 'yarn lint-staged'",
    "add:githook:commit-msg": "yarn husky add .husky/commit-msg 'yarn commitlint --edit $1'",
    "format": "prettier --write --ignore-path .gitignore --ignore-unknown .",
    "format:check": "prettier --check --ignore-path .gitignore --ignore-unknown .",
    "test": "jest",
    "release": "standard-version $1 && git push origin main --follow-tags"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@types/jest": "26.0.22",
    "@types/node": "14.14.37",
    "eslint": "7.23.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "jsdom": "16.5.2",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "standard-version": "9.2.0",
    "typescript": "4.2.3"
  }
}
