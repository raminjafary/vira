{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "declaration": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "lib": ["dom", "esnext"],
    "moduleResolution": "Node",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "Vida.h",
    "declarationMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["src/typings", "node_modules/@types"],
    "types": ["node", "jest"],
    "paths": {
      "~/*": ["packages/*"]
    }
  },
  "include": ["src", "typings"],
  "exclude": ["node_modules", "dist"]
}
